module main

import std.concurrent as conc;

fn main() nothrow -> Int {
	var f = conc.spawn_future(| | => { return 1; });
	f.cancel();
	var res = f.join_timeout(conc.Duration(millis = 0));
	return match res {
		Err(err) => {
			match err {
				Cancelled => { 0 },
				default => { 1 },
			}
		},
		Ok(_v) => { 2 },
		default => { 2 },
	};
}
